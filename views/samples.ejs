    <script>
        // Script para controlar a reprodução dos áudios
        const audioElements = document.querySelectorAll('.audio-track');
        let currentAudio = null;
        var i = 0;
        audioElements.forEach(track => {
            console.log(track);
            const playButton = track.querySelector(`#btn${i}`);
            const progressBar = track.querySelector(`#pro${i}`);
            const audio = new Audio(`audios/audio${i}.mp3`);
            
            playButton.addEventListener('click', () => {
                if (currentAudio && currentAudio !== audio) {
                    currentAudio.pause();
                    currentAudio.currentTime = 0;
                    const currentProgress = document.querySelector('.progress-playing');
                    if (currentProgress) {
                        currentProgress.classList.remove('progress-playing');
                        currentProgress.style.width = '0';
                    }
                }
    
                if (audio.paused) {
                    audio.play();
                    playButton.textContent = 'Stop';
                    currentAudio = audio;
                } else {
                    audio.pause();
                    audio.currentTime = 0;
                    playButton.textContent = 'Play';
                    progressBar.style.width = '0';
                    currentAudio = null;
                }
    
                audio.ontimeupdate = () => {
                    progressBar.style.width = (audio.currentTime / audio.duration) * 100 + '%';
                    progressBar.classList.add('progress-playing');
                };
    
                audio.onended = () => {
                    playButton.textContent = 'Play';
                    progressBar.style.width = '0';
                    currentAudio = null;
                };
            });
            i=i+1;
            if (i == 6){i=0} ;
        });
    </script>
    
